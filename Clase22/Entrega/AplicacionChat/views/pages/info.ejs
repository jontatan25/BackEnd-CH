<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <header><%- include('../partials/header'); %></header>
    <main>
      
      <div class="jumbotron">

        <table class="table table-dark">
          <thead>
            <tr>
                <th scope="col">Argumentos</th>
                <th scope="col">Args</th>
              </tr>
            <tr>
              <th scope="col">Plataforma</th>
              <th scope="col"><%= plataforma %></th>
            </tr>
            <tr>
              <th scope="col">Version Node</th>
              <th scope="col"><%= version %></th>
            </tr>
            <tr>
              <th scope="col">Uso de memoria</th>
              <th scope="col"><%= rss %></th>
            </tr>
            <tr>
              <th scope="col">Path de Ejecucion</th>
              <th scope="col"><%= pathEjecucion %></th>
            </tr>
            <tr>
              <th scope="col">Id del proceso</th>
              <th scope="col"><%= id %></th>
            </tr>
            <tr>
              <th scope="col">Carpeta del proyecto</th>
              <th scope="col"><%= carpeta %></th>
            </tr>
          </thead>
          <tbody id="productContainer"></tbody>
        </table>
      </div>
    
    </main>
    <footer><%- include('../partials/footer'); %></footer>

    <script>
      var messages = document.getElementById("ulMessages");
      var form = document.getElementById("formChat");
      var input = document.getElementById("input");
      var inputEmail = document.getElementById("inputEmail");

      var today = new Date();
      var date =
        today.getFullYear() +
        "/" +
        (today.getMonth() + 1) +
        "/" +
        today.getDate();
      var time =
        today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();
      var dateTime = date + " " + time;

      formChat.addEventListener("submit", function (e) {
        e.preventDefault();

        if (inputMessage.value) {
          // getting the actual time of the messages
          var today = new Date();
          var date =
            today.getFullYear() +
            "/" +
            (today.getMonth() + 1) +
            "/" +
            today.getDate();
          var time =
            today.getHours() +
            ":" +
            today.getMinutes() +
            ":" +
            today.getSeconds();
          var dateTime = date + " " + time;

          // Saving message info

          var userInfo = {
            email: inputEmail.value,
            text: inputMessage.value,
            time: dateTime,
          };
          socket.emit("chat message", userInfo);
        }
      });

      socket.on("chat message", (messagesArr) => {
        messages.innerHTML = messagesArr
          .map(
            (msg) =>
              `<li style="display:flex"> 
                <p  style="color:blue; margin-right:5px; font-weight:bold"> ${msg.email}</p> 
                <p  style="color:brown; margin-right:10px">[ ${msg.time} ]</p>   
                <p  style="color:green; margin-right:10px; font-style:italic;">Message: ${msg.text}</p> ` +
              "</li>"
          )
          .join("");
        window.scrollTo(0, document.body.scrollHeight);
      });
    </script>
  </body>
</html>
